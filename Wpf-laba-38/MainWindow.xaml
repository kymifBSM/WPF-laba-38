<Window x:Class="Wpf_laba_38.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wpf_laba_38"
        mc:Ignorable="d"
        Title="CapyChat" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <ListBox x:Name="chatHistoryListBox" Margin="10" Grid.Row="0"/>
        <TextBox x:Name="messageTextBox" Margin="10" Grid.Row="1"/>
        <Button x:Name="sendButton" Content="Send" Margin="10" Grid.Row="1" HorizontalAlignment="Right" Width="100"/>
    </Grid>
</Window>
